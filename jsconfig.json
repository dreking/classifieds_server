{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@startup/*": ["startup/*"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": ["node_modules"]
}
